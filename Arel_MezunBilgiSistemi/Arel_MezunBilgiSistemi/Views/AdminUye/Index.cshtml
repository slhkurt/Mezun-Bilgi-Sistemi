@model IEnumerable<Arel_MezunBilgiSistemi.Models.Uyeler>
@{
    ViewBag.Title = "Üyeler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    <style>
        .btnn{
            float:right;
            margin-bottom:20px;
        }
    </style>
    }

<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Üyeler
                
            </header>
            <div class="col-md-3 btnn">
                <a href="/AdminMail/TopluMailGonder" class="btn btn-success btn-lg btn-block">Toplu Mail Gönder</a>
            </div>
            
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> Foto</th>
                        <th> Ad / Soyad</th>
                        <th> Kullanıcı Adı</th>
                        <th> Email</th>
                        <th> Kayıt Tarihi</th>
                        <th> Yetkisi</th>
                        <th> Ayarlar</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var uye in Model)
                    {
                    <tr>
                        <td><img src="@uye.Foto" alt="@uye.KullaniciAdi" width="50" /></td>
                        <td><a href="#">@uye.AdiSoyadi</a></td>
                        <td><a href="#">@uye.KullaniciAdi</a></td>
                        <td><a href="#">@uye.Email</a></td>
                        <td><a href="#">@string.Format("{0:D}", uye.KayitTarihi)</a></td>
                        <td><a href="#">@uye.Yetkiler.YetkiAdi</a></td>
                        <td>
                            <a href="/AdminUye/Detay/@uye.UyeId" class="btn btn-success btn-xs"><i class="icon-ok"></i></a>
                            <a href="/AdminUye/Sil/@uye.UyeId" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            <a href="/AdminMail/MailGonder/@uye.UyeId" class="btn btn-success">Mail Gönder</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

