
@{
    ViewBag.Title = "Üye Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Arel_MezunBilgiSistemi.Models
@model Uyeler
<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Üye Silme Sayfası <br /> Kullanıcı Adı : @Model.KullaniciAdi olan Kullanıcıyı silmek istediğinize eminmisiniz?
            </header>
            <div class="panel-body">
                <form role="form" action="/AdminUye/Sil" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="UyeId" value="@Model.UyeId" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Foto</label>
                        <img src="@Model.Foto" alt="@Model.KullaniciAdi" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ad / Soyad</label>
                        <p>@Model.AdiSoyadi</p>
                    </div>
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a href="/AdminUye/Index" class="btn btn-info">İptal</a>
                </form>
            </div>
        </section>
    </div>
</div>

