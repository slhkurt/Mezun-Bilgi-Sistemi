
@{
    ViewBag.Title = "Profil Düzenle";
}

@using Arel_MezunBilgiSistemi.Models
@model Uyeler

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="Mosaddek">
        <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
        <link rel="shortcut icon" href="img/favicon.png">
        <title>Profile Düzenle</title>
        <!-- Bootstrap core CSS -->
        <link href="/Content/AdminTemplate/css/bootstrap.min.css" rel="stylesheet">
        <link href="/Content/AdminTemplate/css/bootstrap-reset.css" rel="stylesheet">
        <!--external css-->
        <link href="/Content/AdminTemplate/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <!-- Custom styles for this template -->
        <link href="/Content/AdminTemplate/css/style.css" rel="stylesheet">
        <link href="/Content/AdminTemplate/css/style-responsive.css" rel="stylesheet" />
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
        <!--[if lt IE 9]>
          <script src="js/html5shiv.js"></script>
          <script src="js/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>


        <section id="container" class="">
            <!--main content start-->
            <section id="main-content">
                <section class="wrapper">
                    <!-- page start-->
                    <div class="row">
                        <aside class="profile-info col-lg-9">
                            <section class="panel">
                                <div class="bio-graph-heading">
                                    Merhaba @Model.AdiSoyadi Profil Bilgilerinizi Bu Sayfadan Güncelleye Bilirsiniz
                                </div>
                                <div class="panel-body bio-graph-info">
                                    <h1> Profil Güncelle</h1>
                                    <form class="form-horizontal" action="/Uye/ProfilDuzenle" name="UyeId" method="post" role="form">
                                        <input type="hidden" name="UyeId" value="@Model.UyeId" />
                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Adı / Soyadı</label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="AdiSoyadi" id="f-name" value="@Model.AdiSoyadi">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Kullanıcı Adı</label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="KullaniciAdi" id="f-name" value="@Model.KullaniciAdi">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Email</label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="Email" id="email" value="@Model.Email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button type="submit" class="btn btn-success">Kaydet</button>
                                                <a href="/Uye/Index/@Model.UyeId" class="btn btn-info">Geri Dön</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </section>
                        </aside>
                    </div>
                    <!-- page end-->
                </section>
            </section>
            <!--main content end-->
        </section>
        <!-- js placed at the end of the document so the pages load faster -->
        <script src="/Content/AdminTemplate/js/jquery.js"></script>
        <script src="/Content/AdminTemplate/js/bootstrap.min.js"></script>
        <script class="include" type="text/javascript" src="/Content/AdminTemplate/js/jquery.dcjqaccordion.2.7.js"></script>
        <script src="/Content/AdminTemplate/js/jquery.scrollTo.min.js"></script>
        <script src="/Content/AdminTemplate/js/jquery.nicescroll.js" type="text/javascript"></script>
        <script src="/Content/AdminTemplate/assets/jquery-knob/js/jquery.knob.js"></script>
        <script src="/Content/AdminTemplate/js/respond.min.js"></script>
        <!--common script for all pages-->
        <script src="js/common-scripts.js"></script>

    </body>
</html>


