
@{
    ViewBag.Title = "Duyuru Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Arel_MezunBilgiSistemi.Models
@model Makaleler
<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Duyuru Detay Sayfası
            </header>
            <div class="panel-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Kategori Adı</label>
                    <p>@Model.Kategoriler.KategoriAdi</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Başlık</label>
                    <p>@Model.Baslik</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">İçerik</label>
                    <p>@Model.Icerik</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Yayın Tarihi</label>
                    <p>@string.Format("{0:D}", Model.YayinTarih)</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Foto</label>
                    <img src="@Model.Foto" alt="@Model.Baslik" width="200" />
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputPassword1">Etiketler</label>
                    @foreach (var e in Model.Etiketlers.ToList())
                    {
                        <p>@e.EtiketAdi</p>
                    }
                </div>
                <br />
                <a href="/AdminMakale/Duzenle/@Model.MakaleId" class="btn btn-success">Düzenle</a>
                <a href="/AdminMakale/Index" class="btn btn-info">İptal</a>
            </div>
        </section>
    </div>
</div>




