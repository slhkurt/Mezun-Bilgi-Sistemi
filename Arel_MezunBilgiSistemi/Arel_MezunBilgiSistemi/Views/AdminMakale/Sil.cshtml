
@{
    ViewBag.Title = "Duyuru Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Arel_MezunBilgiSistemi.Models
@model Makaleler
<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Duyuru Düzenleme Sayfası <br /> Kategorisi @Model.Kategoriler.KategoriAdi olan duyuruyu silmek istediğinize eminmisiniz?
            </header>
            <div class="panel-body">
                <form role="form" action="/AdminMakale/Sil" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="MakaleId" value="@Model.MakaleId" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kategori Adı</label>
                        <input type="hidden" name="KategoriID" value="@Model.KategoriID" />
                        <input type="text" class="form-control" id="exampleInputPassword1" disabled name="KategoriID" value="@Model.Kategoriler.KategoriAdi">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Başlık</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="Baslik" value="@Model.Baslik">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">İçerik</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="Icerik" value="@Model.Icerik">
                    </div>
                    <hr />
                    <div class="form-group">
                        <label for="exampleInputPassword1">Foto</label>
                        <img src="@Model.Foto" alt="@Model.Baslik" />
                    </div>
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a href="/AdminMakale/Index" class="btn btn-info">İptal</a>
                </form>
            </div>
        </section>
    </div>
</div>

