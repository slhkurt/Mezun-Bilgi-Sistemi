@model IEnumerable<Arel_MezunBilgiSistemi.Models.Uyeler>
@{
    ViewBag.Title = "Toplu Mail GÖnderme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Mail Gönderme Sayfası <br /> Sistemem Kayıtlı Tüm Kullanıcılara Toplu E-Posta Göndermek istediğinize eminmisiniz?
            </header>
            <div class="panel-body">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th> Foto</th>
                            <th> Ad / Soyad</th>
                            <th> Kullanıcı Adı</th>
                            <th> Email</th>
                            <th> Kayıt Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var uye in Model)
                        {
                            <tr>
                                <td><img src="@uye.Foto" alt="@uye.KullaniciAdi" width="50" /></td>
                                <td><a href="#">@uye.AdiSoyadi</a></td>
                                <td><a href="#">@uye.KullaniciAdi</a></td>
                                <td><a href="#">@uye.Email</a></td>
                                <td><a href="#">@string.Format("{0:D}", uye.KayitTarihi)</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
<div class="alert">
    <div class="col-md-8">
        @if (ViewBag.hata != null)
        {
            <strong class="text-danger">@ViewBag.hata</strong>
        }
        @if (ViewBag.succes != null)
        {
            <strong class="text-success">@ViewBag.succes</strong>
        }
    </div>
</div>
<div class="inbox-body">
    <a class="btn btn-compose" data-toggle="modal" href="#myModal">
        Mail Gönder
    </a>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Toplu Gmail Gönderme</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form" action="/AdminMail/TopluMailGonder" method="post">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Konu</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" name="Konu" id="inputPassword1" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Mesaj</label>
                            <div class="col-lg-10">
                                <textarea name="Mesaj" class="form-control" cols="30" rows="10"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-send">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>


